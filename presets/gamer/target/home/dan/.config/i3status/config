general {
        colors = true
        output_format = "i3bar"
        interval = 30
        color_good = "#00FF00"
        color_degraded = "#FFFF00"
        color_bad = "#FF0000"
}

#order += "read_file uptime"
#order += "volume master"
order += "battery 0"
order += "tztime local"

tztime local {
        format = "%A %d.%m.%Y %H:%M   "
}

read_file uptime {
       path = "/proc/uptime"
}

